{
  "name": "jobline",
  "version": "1.0.0",
  "private": true,
  "description": "Jobline Recruitment Platform - A comprehensive web application for recruitment agencies in Lebanon",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build:shared": "cd packages/shared && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "db:migrate": "cd packages/backend && npm run db:migrate",
    "db:generate": "cd packages/backend && npx prisma generate",
    "db:seed": "cd packages/backend && npm run db:seed:simple",
    "db:reset": "cd packages/backend && npm run db:reset",
    "lint:backend": "cd packages/backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
