{
  "name": "jobline",
  "version": "1.0.0",
  "private": true,
  "description": "Jobline Recruitment Platform - A comprehensive web application for recruitment agencies in Lebanon",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "node setup.js",
    "start": "node start.js",
    "dev": "node start.js",
    "build:shared": "cd packages/shared && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build": "npm run build:shared && npm run build:frontend",
    "db:migrate": "cd packages/backend && npm run db:migrate",
    "db:seed": "cd packages/backend && npm run db:seed:simple",
    "db:reset": "cd packages/backend && npm run db:reset",
    "clean": "node -e \"const fs=require('fs'),path=require('path');['node_modules','dist','build'].forEach(d=>{['.','.','packages/backend','packages/frontend','packages/shared'].forEach(base=>{const p=path.join(base,d);if(fs.existsSync(p)){console.log('Removing',p);require('child_process').execSync('rmdir /s /q '+p,{stdio:'inherit'})}})})\"",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "check": "node scripts/pre-deploy-check.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
